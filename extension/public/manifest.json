{
  "manifest_version": 3,
  "name": "WebSense-AI",
  "version": "1.0",
  "description": "AI-powered assistant for web navigation and accessibility.",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icons/icon.svg"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"]
}

